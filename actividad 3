Scanner teclado = new Scanner(System.in);
        System.out.print("Ingrese el numero de valores a ingresar : ");
        int valor = teclado.nextInt();
         char[] valores = new char[valor];
    for (int i = 0; i < valor; i++) {
            System.out.print("Ingrese los valores " + i + " : " );
            valores[i] = teclado.next().charAt(0);
        }
        for (int i = valor - 1; i >= 0; i--) {
            System.out.println("los valores ingresados alrevez son :" + valores[i]);
    }
